<% if @user.errors.any? %>
<h2>The following errors prevented the user from being created</h2>
  <ul>
    <% @user.errors.full_messages.each do |msg| %>
      <li><%= msg %></li>
    <% end %>
  </ul>
<% end %>
<%= form_for @user do |f| %>
  <p>
    <%= f.label :username, "Enter Username" %> <br>
    <%= f.text_field :username %>
  </p>
  <p>
    <%= f.label :email, "Enter Email" %> <br />
    <%= f.email_field :email %>
  </p>
  <p>
    <%= f.label :password, "Enter Password" %> <br />
    <%= f.password_field :password %>
  </p>
  <p>
    <%= f.submit(@user.new_record? ? "Sign Up" : "Update Profile") %>
  </p>
<% end %>

<%= link_to  "Back to articles listing", articles_path %>